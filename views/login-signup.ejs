<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head'); %>

        <title>Login/Signup</title>

        <link rel="stylesheet" href="/css/login-signup.css">
    </head>

    <body>
        <%- include('partials/navbar') %>

        <div class="login-signup">
            <div class="login">Login</div>
            <div class="signup">Signup</div>

            <div class="login-form">
                <form action="/user/login" method="POST" enctype="application/x-www-form-urlencoded">
                    <input type="email" id="login-email" name="email" placeholder="Email" required>
                    <br>  
                    <input type="password" id="login-password" name="password" placeholder="Password" required>
                    <br>
                    <span id="login-message"></span>
                    <br>
                    <button type="submit" id="login">Login</button>
                </form>
            </div>

            <div class="signup-form">
                <form action="/user" method="POST" enctype="application/x-www-form-urlencoded">
                    <input type="email" id="signup-email" name="email" placeholder="Your Email Address" required>
                    <br>
                    <input type="password" id="signup-password" name="password" placeholder="Your Password" required>
                    <br>
                    <input type="password" id="confirm-password" placeholder="Confirm Password" required>
                    <br>
                    <span id="signup-message"></span>
                    <br>
                    <button type="submit" id="signup">Signup</button>
                </form>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <script src="/scripts/login-signup.js"></script>
        <script src="/scripts/navbar.js"></script>
    </body>
</html>